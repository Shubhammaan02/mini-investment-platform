{
  "name": "mini-investment-backend",
  "version": "1.0.0",
  "description": "Backend for Mini Investment Platform",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch --verbose --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --verbose --runInBand",
    "test:logs": "cross-env NODE_ENV=test jest tests/transactionLogs.test.js --verbose --runInBand",
    "test:investments": "cross-env NODE_ENV=test jest tests/investments.test.js --verbose --runInBand",
    "test:products": "cross-env NODE_ENV=test jest tests/products.test.js --verbose --runInBand",
    "test:auth": "cross-env NODE_ENV=test jest tests/auth.test.js --verbose --runInBand",
    "db:start": "docker-compose -f ../docker-compose.yml up -d",
    "db:stop": "docker-compose -f ../docker-compose.yml down"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.0",
    "nodemailer": "^6.9.4",
    "sequelize": "^6.32.1",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.3"
  }
}
